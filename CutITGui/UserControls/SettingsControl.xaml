<UserControl x:Class="CutITGui.UserControls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CutITGui.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100"
             DataContext="{Binding SettingsViewModel, Source={StaticResource Locator}}" Width="100" >
    <Grid Visibility="{Binding Visibility}">
        <TextBox x:Name="tbxSettingValue" TextWrapping="Wrap" Text="{Binding SettingValue}" BorderThickness="0" FontSize="11" TabIndex="600" Margin="0,82,0,0"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,82,0,0"/>
        <ListBox x:Name="lbsSettings" ItemsSource="{Binding Settings}" BorderThickness="1" BorderBrush="Black" Margin="0,0,0,17"/>
    </Grid>
</UserControl>
