        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="2" ScaleY="2" />
        </Grid.LayoutTransform>

        <UserControls:ConsoleControl Margin="10,10,115,10" Width="Auto"/>
        <UserControls:ActiveStatusControl Margin="0,10,10,0" HorizontalAlignment="Right" d:LayoutOverrides="Width, Height" VerticalAlignment="Top"/>
        <UserControls:ConnectControl HorizontalAlignment="Right" Margin="0,0,10,10" d:LayoutOverrides="Width" Height="51" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
