        xmlns:UserControls="clr-namespace:CutITGui.UserControls" x:Class="CutITGui.MainWindow"
        mc:Ignorable="d"
        Title="CutIT" Height="400" MinHeight="400" Width="500" MinWidth="500" WindowStartupLocation="CenterScreen" >
